{
  "name": "github-achievement-generator",
  "version": "1.0.0",
  "description": "Automated tool to help unlock GitHub achievement badges",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node achievement-master.js",
    "pull-shark": "node classic-pull-shark.js",
    "galaxy-brain": "node classic-galaxy-brain.js",
    "yolo": "node classic-yolo.js",
    "quickdraw": "node classic-quickdraw.js",
    "heart": "node classic-heart.js",
    "pair": "node classic-pair.js",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.json *.md",
    "check-format": "prettier --check *.js *.json *.md",
    "security-check": "grep -r 'ghp_\\|github_pat_\\|token.*=\\|TOKEN.*=' . --exclude-dir=node_modules --exclude=package-lock.json || echo 'No hardcoded tokens found âœ…'",
    "validate": "npm run lint && npm run check-format && npm run security-check"
  },
  "keywords": [
    "github",
    "achievements",
    "badges",
    "automation",
    "pull-shark",
    "galaxy-brain"
  ],
  "author": "Dlanang",
  "license": "MIT",
  "dependencies": {
    "@octokit/auth-token": "^4.0.0",
    "@octokit/graphql": "^7.0.2",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.5.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^8.2.6",
    "mongoose": "^7.5.0",
    "node-cron": "^3.0.2",
    "ora": "^5.4.1",
    "puppeteer": "^21.3.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.5.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.1.6"
  }
}
