# GitHub Personal Access Token (required)
GITHUB_TOKEN=your_github_token_here

# GitHub Username
GITHUB_USERNAME=your_username

# MongoDB Connection (optional - for tracking progress)
MONGODB_URI=mongodb://localhost:27017/github-achievements

# Server Configuration
PORT=3000
NODE_ENV=development

# Achievement Settings
AUTO_MODE=true
DELAY_BETWEEN_ACTIONS=5000
MAX_DAILY_ACTIONS=50

# Pull Shark Configuration
PULL_SHARK_TARGET_REPO=your_target_repo
PULL_SHARK_BRANCH_PREFIX=achievement-pr-

# Galaxy Brain Configuration
DISCUSSIONS_REPO=your_discussions_repo
AUTO_ANSWER_DISCUSSIONS=true

# Arctic Code Vault Configuration
ARCTIC_REPOS=["microsoft/vscode", "facebook/react", "nodejs/node"]

# Starstruck Configuration  
TARGET_STARS=16
USE_BOT_ACCOUNTS=false

# Safety Settings
DRY_RUN=false
VERBOSE_LOGGING=true